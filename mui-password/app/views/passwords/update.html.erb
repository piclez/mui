<%= mui_window(:label => 'Password') do %>
  <%= mui_form(:action => url(:mui_password_update), :model => @password) do %>
    <%= mui_form_password(:password, :focus => true, :inline => true, :label => 'Password') %>
    <%= mui_form_password(:password_confirmation, :inline => true, :label => 'Password Confirmation') %>
    <div>
      <%= mui_button(:inline => true, :label => 'Update', :submit => true, :tone => 'positive')%>
      <%= mui_button(:inline => true, :label => 'Delete', :tone => 'negative', :url => url(:mui_password_delete), :window => 'redirect') %>
    </div>
  <% end =%>
<% end =%>