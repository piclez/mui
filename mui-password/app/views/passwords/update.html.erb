<%= mui_window(:title => 'Update/Delete Password') do %>
  <%= mui_form(:action => url(:mui_password_update), :model => @password) do %>
    <%= partial(:form) %>
    <%= mui_block do %>
      <%= mui_button(:title => 'Update', :submit => true, :tone => 'positive')%>
      <%= mui_button(:title => 'Delete', :url => url(:mui_password_delete), :window => 'redirect') %>
    <% end =%>
  <% end =%>
<% end =%>
