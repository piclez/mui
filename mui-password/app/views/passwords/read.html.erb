<%= mui_window(:title => 'Enter Password') do %>
  <%= mui_form(:action => url(:mui_password_read), :model => @password) do %>
    <%= mui_block do %>
      <%= mui_password(:password, :focus => true, :inline => true, :title => 'Password') %>
    <% end =%>
    <%= mui_block do %>
      <%= mui_button(:title => 'Enter', :submit => true, :tone => 'positive')%>
    <% end =%>
  <% end =%>
<% end =%>
