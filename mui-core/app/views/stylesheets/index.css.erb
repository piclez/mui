<%= @gecko -%>
<%= @msie -%>
* {
  font-family: "Lucida Grande", Verdana, sans-serif;
  line-height: 1em;
  margin: 0;
  padding: 0;
}
body {
  font-size: 13px;
}

/* bar */

div.mui_bar {
  background-color: <%= color(0.1, 0.1, 0.1) %>;
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-collapse: collapse;
  border-spacing: 0;
  border-style: none;
  border-width: 0;
  color: <%= color(1, 1, 1) %>;
}
div.mui_bar_window {
  <%= border_radius(:edge => 'top') %>
}
div.mui_bar td {
  height: 2em;
  white-space: nowrap;
}
input.mui_bar_tab {
  background-color: <%= color(0.1, 0.1, 0.1) %>;
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-bottom: none;
  border-left: none;
  border-right-color: <%= color(0.1, 0.1, 0.1) %>;
  border-right-style: solid;
  border-right-width: 1px;
  border-top: none;
  color: <%= color(1, 1, 1) %>;
  font-size: 1em;
  height: 2em;
  padding-left: 2em;
  padding-right: 2em;
}
input.mui_bar_tab:first-child {
  border-left-color: <%= color(0.1, 0.1, 0.1) %>;
  border-left-style: solid;
  border-left-width: 1px;
}
input.mui_bar_tab:hover {
  background-color: <%= color(0.2, 0.2, 0.2) %>;
}
input.mui_bar_tab:active, *.mui_selected {
  background-color: <%= color(0, 0.3, 0.9) %> !important;
  border-left-color: <%= color(0.1, 0.1, 0.1) %> !important;
  border-right-color: <%= color(0.1, 0.1, 0.1) %> !important;
  color: <%= color(1, 1, 1) %> !important;
}

/* block */

span.mui_block {
  display: block;
}

/* button */

*.mui_button {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-style: solid;
  border-width: 1px;
  font-size: 0.85em;
  min-height: 1.5em;
  padding-left: 1em;
  padding-right: 1em;
  <%= border_radius %>
}
*.mui_button_tone_neutral {
  background-color: <%= color(0.2, 0.2, 0.2) %>;
  border-bottom-color: <%= color(0, 0, 0) %>;
  border-left-color: <%= color(0.1, 0.1, 0.1) %>;
  border-right-color: <%= color(0.1, 0.1, 0.1) %>;
  border-top-color: <%= color(0.2, 0.2, 0.2) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_neutral:hover {
  background-color: <%= color(0.3, 0.3, 0.3) %>;
  border-bottom-color: <%= color(0.1, 0.1, 0.1) %>;
  border-left-color: <%= color(0.2, 0.2, 0.2) %>;
  border-right-color: <%= color(0.2, 0.2, 0.2) %>;
  border-top-color: <%= color(0.3, 0.3, 0.3) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_neutral:active {
  background-color: <%= color(0.1, 0.1, 0.1) %>;
  background-image: none;
  border-bottom-color: <%= color(0.1, 0.1, 0.1) %>;
  border-left-color: <%= color(0, 0, 0) %>;
  border-right-color: <%= color(0, 0, 0) %>;
  border-top-color: <%= color(0, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_positive {
  background-color: <%= color(0.1, 0.5, 0.1) %>;
  border-bottom-color: <%= color(0, 0.3, 0) %>;
  border-left-color: <%= color(0, 0.4, 0) %>;
  border-right-color: <%= color(0, 0.4, 0) %>;
  border-top-color: <%= color(0.1, 0.5, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_positive:hover {
  background-color: <%= color(0.2, 0.6, 0.2) %>;
  border-bottom-color: <%= color(0, 0.4, 0) %>;
  border-left-color: <%= color(0.1, 0.5, 0.1) %>;
  border-right-color: <%= color(0.1, 0.5, 0.1) %>;
  border-top-color: <%= color(0.2, 0.6, 0.2) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_positive:active {
  background-color: <%= color(0.1, 0.5, 0.1) %>;
  background-image: none;
  border-bottom-color: <%= color(0.1, 0.5, 0.1) %>;
  border-left-color: <%= color(0.1, 0.5, 0.1) %>;
  border-right-color: <%= color(0.1, 0.5, 0.1) %>;
  border-top-color: <%= color(0, 0.4, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_negative {
  background-color: <%= color(0.6, 0, 0) %>;
  border-bottom-color: <%= color(0.4, 0, 0) %>;
  border-left-color: <%= color(0.5, 0, 0) %>;
  border-right-color: <%= color(0.4, 0, 0) %>;
  border-top-color: <%= color(0.6, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_negative:hover {
  background-color: <%= color(0.7, 0, 0) %>;
  border-bottom-color: <%= color(0.5, 0, 0) %>;
  border-left-color: <%= color(0.6, 0, 0) %>;
  border-right-color: <%= color(0.6, 0, 0) %>;
  border-top-color: <%= color(0.7, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
*.mui_button_tone_negative:active {
  background-color: <%= color(0.6, 0, 0) %>;
  background-image: none;
  border-bottom-color: <%= color(0.6, 0, 0) %>;
  border-left-color: <%= color(0.6, 0, 0) %>;
  border-right-color: <%= color(0.6, 0, 0) %>;
  border-top-color: <%= color(0.5, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
button.mui_button {
  padding: 0;
}
button.mui_button td {
  text-align: left;
}

/* checkbox */

input.mui_checkbox {
  vertical-align: middle;
}

/* code */

code.mi {
  background-color: <%= color(0, 0, 0) %>;
  border-color: <%= color(0, 0, 0) %>;
  border-style: solid;
  border-width: 1px;
  color: <%= color(1, 1, 1) %>;
  display: block;
  font-family: 'Bitstream Vera Sans Mono', 'Monaco', monospace;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
  padding-top: 15px;
  margin-top: 5px;
}
code.mi var {
  color: <%= color(0.75, 0.75, 0.75) %>;
}

/* column */

td.mui_column {
}
td.mui_column_tray {
  background-color: <%= color(0.95, 0.95, 0.95) %>;
  border-bottom-color: <%= color(0.95, 0.95, 0.95) %>;
  border-left-color: <%= color(0.85, 0.85, 0.85) %>;
  border-right-color: <%= color(0.85, 0.85, 0.85) %>;
  border-top-color: <%= color(0.75, 0.75, 0.75) %>;
  border-style: solid;
  border-width: 1px;
  padding: 1em;
  <%= border_radius(:amount => 0.6) %>
}

/* desktop */

div.mui_desktop {
  padding: 1em;
}

/* divider */

hr.mui_divider {
  background: <%= color(0, 0, 0) %>;
  border: none;
  height: 1px;
  margin-bottom: 20px;
  margin-top: 20px;
}

/* form */

label {
  display: block;
  font-size: 0.85em;
  font-weight: bold;
}
input.mui_password, input.mui_text, textarea.mui_hyper_text {
  background-color: <%= color(1, 1, 1) %>;
  border-bottom-color: <%= color(0.75, 0.75, 0.75) %>;
  border-left-color: <%= color(0.65, 0.65, 0.65) %>;
  border-right-color: <%= color(0.65, 0.65, 0.65) %>;
  border-style: solid;
  border-top-color: <%= color(0.55, 0.55, 0.55) %>;
  border-width: 1px;
  color: <%= color(0, 0, 0) %>;
  display: block;
  font-size: 1em;
  line-height: 1.6em;
  min-height: 1.6em;
  margin-top: 0.25em;
  padding-left: 0.25em;
  padding-right: 0.25em;
  <%= border_radius %>
  <%= border_radius(:amount => 0.4) %>
}
textarea.mui_hyper_text {
  color: <%= color(0.2, 0.2, 0.2) %>;
  font-size: 0.9em;
  line-height: 1.5em;
  min-height: 20em;
  min-width: 40em;
  padding: 0;
  width: 100%;
}

/* grid */

table.mui_grid {
  border-spacing: 0;
  table-layout: fixed;
}
table.mui_grid_bar {
  border-spacing: 1em 0;
  table-layout: auto;
  width: 100%;
}
table.mui_grid_button {
  border-spacing: 0.5em;
}
table.mui_grid_desktop {
  border-spacing: 1em;
  width: 100%;
}
table.mui_grid_form {
  border-spacing: 1em;
  margin: -1em;
}
table.mui_grid_tray {
  border-spacing: 0 1em;
  margin-bottom: -1em;
  margin-top: -1em;
  width: 100%;
}
table.mui_grid_window {
  border-spacing: 1em;
  width: 100%;
}

/* image */

img.mui_image {
  background-repeat: no-repeat;
  display: block;
}
img.mui_image_rounded {
  <%= border_radius %>
}
img.mui_image_border {
  border-color: <%= color(0.5, 0.5, 0.5) %>;
  border-style: solid;
  border-width: 1px;
}


/* inline */

span.mui_inline {
  display: inline-block;
}


/* key */

kbd.mui_key {
}

/* link */

.mui_link {
  color: #0066ff;
  text-decoration: none;
}
.mui_link:visited {
  color: #993399;
}
.mui_link:active {
  color: #3399ff;
  outline: 0;
  text-decoration: underline;
}
.mui_link:focus {
  color: #3399ff;
  outline: 0;
}
.mui_link:hover {
  text-decoration: underline;
}
.mui_link_external {
  cursor: ne-resize;
}

/* list */

ul.mui_list {
  list-style-position: inside;
  margin-left: 0.25em;
}
li.mui_list_item {
  margin-top: 0.25em;
}

/* menu */

select.mui_menu {
  padding-left: 2px;
  padding-right: 2px;
}

/* message */

div.mui_message_target {
  display: hidden;
}
div.mui_message {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-collapse: collapse;
  border-spacing: 0;
  border-style: none;
  border-width: 0;
  color: <%= color(1, 1, 1) %>;
}
div.mui_message td {
  padding-bottom: 0.5em;
  padding-top: 0.5em;
}
div.mui_message.mui_tone_positive {
  background-color: <%= color(0, 0.6, 0) %>;
}
div.mui_message.mui_tone_negative {
  background-color: <%= color(0.6, 0, 0) %>;
}
div.mui_message.mui_tone_neutral {
  background-color: <%= color(0, 0, 0) %>;
}

/* paragraph */

p.mui_paragraph {
  color: <%= color(0.2, 0.2, 0.2) %>;
  line-height: 1.5em;
  max-width: 40em;
}
p.mui_paragraph+p.mui_paragraph {
  margin-top: 1em;
}

/* quote */

blockquote.mui_quote {
  background-color: #e5e5e5;
}

/* table */

table.mui_table {
  border-collapse: collapse;
  border-spacing: 0;
  border-style: none;
  border-width: 0;
  margin: 1em;
  table-layout: fixed;
  width: 100%;
}

/* title */

h1.mui_title {
  font-family: Helvetica, Verdana, sans-serif;
  font-size: 3em;
  letter-spacing: -0.05em;
  margin-bottom: 0.33em;
  margin-left: -0.06em;
  margin-top: -0.13em;
}
h1.mui_title_tray {
  font-size: 2em;
  letter-spacing: -0.05em;
  margin-bottom: 0.5em;
}
h2.mui_title {
  font-size: 2.4em;
}
h3.mui_title {
  font-size: 2em;
}
h4.mui_title {
  font-size: 1.6em;
}
h5.mui_title {
  font-size: 1.2em;
}
h6.mui_title {
  font-size: 0.85em;
}

/* truncate */

i.mui_truncate {
  color: <%= color(0.5, 0.5, 0.5) %>;
}

/* window */

span.mui_window {
  background-image: url('/images/transparency.png');
  color: <%= color(1, 1, 1) %>;
  display: inline-block;
  padding: 1em;
  position: relative;
  <%= border_radius(:edge => 'bottom') %>
}
span.mui_window_target {
  display: hidden;
  position: fixed;
}
