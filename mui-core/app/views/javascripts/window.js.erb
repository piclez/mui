$(document).ready(function(){
  var $self = jQuery(this);
  var fullHeight = $('.mui_window').height();
  var fullWidth = $('.mui_window').width();
  $('.mui_window_target').css('margin-left', (fullWidth/2)*(-1));
  $('.mui_window_target').css('margin-top', (fullHeight/2)*(-1));
  $('.mui_click_window_close').click(function(){
    $('.mui_window').fadeOut(function(){
      $('.mui_window_target').empty();
    });
  	return false;
  });
  $('.mui_click_window_open').click(function(){
  	$('.mui_window_target').hide().load(this.id).fadeIn();
  	return false;
  });
  $('.mui_window').draggable();
  $('.mui_focus').focus();
});
$(document).keyup(function(event){
  if (event.keyCode == 27) {
    $('.mui_window').fadeOut(function(){
      $('.mui_window_target').empty();
    });
  	return false;
  }
});
