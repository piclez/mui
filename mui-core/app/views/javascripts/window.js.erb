$(document).ready(function(){
  var fullHeight = $('.mui_window_target').height();
  var fullWidth = $('.mui_window_target').width();
  $('.mui_window_target').css('margin-left', (fullWidth/2)*(-1));
  $('.mui_window_target').css('margin-top', (fullHeight/2)*(-1));
  $('.mui_click_window_close').click(function(){
    $('.mui_window_target').fadeOut(function(){
      $('.mui_window_target').empty();
    });
  	return false;
  });
  $('.mui_click_window_redirect').click(function(){
    var $url = this.id;
    $('.mui_window_target').fadeOut(function(){
      $('.mui_window_target').empty().hide().load($url).fadeIn();
    });
  	return false;
  });
  $('.mui_wysiwyg').wysiwyg();
  $('.mui_window_target').draggable();
  $('.mui_focus').focus();
});
$(document).keyup(function(event){
  if (event.keyCode == 27) {
    $('.mui_window_target').fadeOut(function(){
      $('.mui_window_target').empty();
    });
  	return false;
  }
});
