$(document).ready(function(){
  var $self = jQuery(this);
  var fullHeight = $('.mui_dialog_window').height();
  var fullWidth = $('.mui_dialog_window').width();
  $('.mui_dialog_target').css('margin-left', (fullWidth/2)*(-1));
  $('.mui_dialog_target').css('margin-top', (fullHeight/2)*(-1));
  $('.mui_click_dialog_close').click(function(){
    $('.mui_dialog_window').fadeOut(function(){
      $('.mui_dialog_target').empty();
    });
  	return false;
  });
  $('.mui_dialog_window').draggable();
  $('.mui_focus').focus();
});
$(document).keyup(function(event){
  if (event.keyCode == 27) {
    $('.mui_dialog_window').fadeOut(function(){
      $('.mui_dialog_target').empty();
    });
  	return false;
  }
});