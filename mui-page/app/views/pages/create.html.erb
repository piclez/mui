<%= mui_dialog_window do %>
  <%= mui_bar(:label => 'Create') do %>
    <%= mui_button(:dialog => 'close')%>
  <% end =%>
  <%= mui_dialog_tray do %>
    <%= mui_form(:action => url(:mui_page_create), :model => @page) do %>
      <%= mui_form_text(:label, :focus => true, :label => 'Label') %>
      <%= mui_form_text_area :value %>
      <%= mui_button(:label => 'Create Page', :submit => true)%>
    <% end =%>
  <% end =%>
<% end =%>