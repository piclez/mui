<%= mui_row do %>
  <%= mui_column(:width => '100%') do %>
    <%= mui_title('Pages')%>
  <% end =%>
  <% if mui_password? %>
    <%= mui_column(:nowrap => 'nowrap', :valign => 'bottom') do %>
      <%= mui_button(:window => 'open', :inline => true, :label => 'Create', :url => url(:mui_page_create)) %>
    <% end =%>
  <% end %>
<% end =%>
<% if @pages
  @pages.each do |page| %>
  <%= mui_tray do %>
    <%= mui_bar(:label => page.label) %>
    <%= mui_paragraph do %>
      <%= page.value %>
    <% end =%>
    <%= mui_row do %>
      <%= mui_column(:width => '100%') do %>
        <%= mui_button(:inline => true, :label => 'Read', :tone => 'positive', :url => url(:mui_page_read, :id => page.id)) %>
      <% end =%>
      <% if mui_password? %>
        <%= mui_column(:nowrap => 'nowrap') do %>
          <%= mui_button(:window => 'open', :inline => true, :label => 'Update', :url => url(:mui_page_update, :id => page.id)) %>
          <%= mui_button(:window => 'open', :inline => true, :label => 'Delete', :tone => 'negative', :url => url(:mui_page_delete, :id => page.id)) %>
        <% end =%>
      <% end %>
    <% end =%>
  <% end =%>
<% end
end %>
