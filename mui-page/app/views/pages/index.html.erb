<%= mui_bar(:title => MuiPage[:title]) do %>
  <% if mui_password? %>
    <%= mui_bar_end do %>
      <%= mui_button(:title => 'Create', :url => url(:mui_page_create), :window => 'open') %>
    <% end =%>
  <% end %>
<% end =%>
<% if @pages %>
  <% @pages.each do |page| %>
    <%= mui_grid do %>
      <%= mui_cell do %>
        <%= mui_block(:title => page.title, :type => 'tray') do %>
          <%= mui_block do %>
            <%= mui_page_truncate(:body => page.body) %>
          <% end =%>
          <%= mui_grid(:columns => 2, :width => '100%') do %>
            <%= mui_cell do %>
              <%= mui_button(:title => 'Read &rarr;', :tone => 'positive', :url => url(:mui_page_read, :page_id => page.id)) %>
            <% end =%>
            <% if mui_password? %>
              <%= mui_cell(:align => 'right') do %>
                <%= mui_button(:title => 'Update', :url => url(:mui_page_update, :page_id => page.id), :window => 'open') %>
                <%= mui_button(:title => 'Delete', :tone => 'negative', :url => url(:mui_page_delete, :page_id => page.id), :window => 'open') %>
              <% end =%>
            <% end %>
          <% end =%>
        <% end =%>
      <% end =%>
    <% end =%>
  <% end %>
<% end %>
