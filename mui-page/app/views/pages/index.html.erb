<%= mui_grid(:type => 'desktop') do %>
  <%= mui_row do %>
    <%= mui_column(:title => 'Pages') %>
    <% if mui_password? %>
      <%= mui_column(:x => 1, :y => 0.5) do %>
        <%= mui_button(:title => 'Create', :url => url(:mui_page_create), :window => 'open') %>
      <% end =%>
    <% end %>
  <% end =%>
  <% if @pages %>
    <% @pages.each do |page| %>
      <%= mui_row do %>
        <%= mui_column(:title => page.title, :span => 2, :type => 'tray') do %>
          <%= mui_grid(:type => 'tray') do %>
            <%= mui_row do %>
              <%= mui_column(:span => 2) do %>
                <%= page.body %>
              <% end =%>
            <% end =%>
            <%= mui_row do %>
              <%= mui_column do %>
                <%= mui_button(:title => 'Read &rarr;', :tone => 'positive', :url => url(:mui_page_read, :id => page.id)) %>
              <% end =%>
              <% if mui_password? %>
                <%= mui_column(:x => 1) do %>
                  <%= mui_button(:title => 'Update', :url => url(:mui_page_update, :id => page.id), :window => 'open') %>
                  <%= mui_button(:title => 'Delete', :tone => 'negative', :url => url(:mui_page_delete, :id => page.id), :window => 'open') %>
                <% end =%>
              <% end %>
            <% end =%>
          <% end =%>
        <% end =%>
      <% end =%>
    <% end %>
  <% end %>
<% end =%>
