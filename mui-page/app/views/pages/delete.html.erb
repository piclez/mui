<%= mui_window(:title => 'Delete Page') do %>
  <%= mui_grid(:type => 'form') do %>
    <%= mui_row do %>
      <%= mui_column do %>Are you sure that you want to delete <%= @page.title %>?<% end =%>
    <% end =%>
    <%= mui_row do %>
      <%= mui_column do %>
  		  <%= mui_form(:action => url(:mui_page_delete, :page_id => @page.id), :model => @page) do %>
          <%= mui_button(:title => 'Delete', :submit => true, :tone => 'negative') %>
        <% end =%>
      <% end =%>
    <% end =%>
  <% end =%>
<% end =%>
