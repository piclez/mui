<%= @gecko -%>
<%= @msie -%>
* {
  font-family: Helvetica, Arial, sans-serif;
  margin: 0;
}

/* background */

.mi_background {
  background-image: url('/images/body.png');
  background-repeat: repeat-x;
}

/* bar */

.mi_bar, .mi_bar_bottom, .mi_bar_top {
  background-color: <%= color(0.1, 0.1, 0.1) %>;
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  color: <%= color(1, 1, 1) %>;
  height: 2em;
  line-height: 2em;
  white-space: nowrap;
}
.mi_block .mi_bar, .mi_block_inline .mi_bar {
  <%= border_radius %>
}
.mi_bar_bottom {
  <%= border_radius(:amount => 0.425, :edge => 'bottom') %>
}
.mi_bar_top {
  <%= border_radius(:amount => 0.425, :edge => 'top') %>
}

/* block */

.mi_block {
  display: block;
  margin: 1em;
}
.mi_block_inline {
  display: inline-block;
  margin: 1em;
  vertical-align: top;
}

/* button */

.mi_button {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-style: solid;
  border-width: 1px;
  font-size: 1em;
  height: 1.5em;
  opacity: 0.9;
  padding: 0 0.75em 0 0.75em;
  <%= border_radius %>
}
.mi_button:first-child {
  margin-left: 1em;
}
.mi_button:hover {
  opacity: 1;
}
button.mi_button, input[type=button].mi_button, input[type=reset].mi_button {
  background-color: <%= color(0.3, 0.3, 0.3) %>;
  border-bottom-color: <%= color(0.2, 0.2, 0.2) %>;
  border-left-color: <%= color(0.25, 0.25, 0.25) %>;
  border-right-color: <%= color(0.25, 0.25, 0.25) %>;
  border-top-color: <%= color(0.3, 0.3, 0.3) %>;
  color: <%= color(1, 1, 1) %>;
}
button.mi_button:active, input[type=button].mi_button:active, input[type=reset].mi_button:active {
  background-color: <%= color(0.2, 0.2, 0.2) %>;
  background-image: none;
  border-bottom-color: <%= color(0.2, 0.2, 0.2) %>;
  border-left-color: <%= color(0.15, 0.15, 0.15) %>;
  border-right-color: <%= color(0.15, 0.15, 0.15) %>;
  border-top-color: <%= color(0.1, 0.1, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button {
  background-color: <%= color(0.1, 0.6, 0.1) %>;
  border-bottom-color: <%= color(0, 0.45, 0) %>;
  border-left-color: <%= color(0.05, 0.55, 0.05) %>;
  border-right-color: <%= color(0.05, 0.55, 0.05) %>;
  border-top-color: <%= color(0.1, 0.6, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button:active {
  background-color: <%= color(0, 0.5, 0) %>;
  background-image: none;
  border-bottom-color: <%= color(0, 0.5, 0) %>;
  border-left-color: <%= color(0, 0.35, 0) %>;
  border-right-color: <%= color(0, 0.35, 0) %>;
  border-top-color: <%= color(0, 0.3, 0) %>;
  color: <%= color(1, 1, 1) %>;
}

/* form */

input[type=checkbox].mi_checkbox {
  vertical-align: middle;
}

/* code */

code.mi {
  background-color: <%= color(0, 0, 0) %>;
  border-color: <%= color(0, 0, 0) %>;
  border-style: solid;
  border-width: 1px;
  color: <%= color(1, 1, 1) %>;
  display: block;
  font-family: 'Bitstream Vera Sans Mono', 'Monaco', monospace;
  font-size: small;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
  padding-top: 15px;
  margin-top: 5px;
}
code.mi var {
  color: <%= color(0.75, 0.75, 0.75) %>;
}

/* dialog */

div.dialog-foreground {
  -moz-border-radius: 6px;
  -moz-box-shadow: 0 2px 4px <%= color(0, 0, 0) %>;
  -webkit-border-radius: 6px;
  -webkit-box-shadow: 0 2px 4px <%= color(0, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
div.dialog-foreground div.dialog-middle {
  background-image: url('/images/transparent-black.png');
  max-height: 420px;
  max-width: 740px;
  overflow: auto;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground div.dialog-middle table.index {
  margin-top: 15px;
}
div.dialog-foreground div.dialog-middle table.index th {
  padding-bottom: 1px;
  padding-top: 1px;
}
div.dialog-foreground div.dialog-middle table.index th:first-child {
  color: <%= color(1, 1, 1) %>;
}
div.dialog-foreground div.dialog-middle td {
  padding-left: 30px;
  vertical-align: top;
}
div.dialog-foreground div.dialog-middle td:first-child {
  padding-left: 0;
}
div.dialog-foreground div.dialog-middle td.set {
  white-space: nowrap;
}
div.dialog-foreground div.dialog-top {
  -moz-border-radius-topleft: 6px;
  -moz-border-radius-topright: 6px;
  -webkit-border-top-left-radius: 6px;
  -webkit-border-top-right-radius: 6px;
  background-image: url('/images/transparent-gray.png');
  line-height: 30px;
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground p {
  margin-top: 15px;
  max-width: 320px;
}
div.dialog-foreground table.dialog-bottom {
  -moz-border-radius-bottomleft: 6px;
  -moz-border-radius-bottomright: 6px;
  -webkit-border-bottom-left-radius: 6px;
  -webkit-border-bottom-right-radius: 6px;
  background-image: url('/images/transparent-gray.png');
  height: 30px;
  width: 100%;
}
div.dialog-foreground table.dialog-bottom td {
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground table.dialog-bottom td:first-child {
  width: 100%;
}
table.dialog-background {
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

/* divider */

hr.mi_divider {
  background: <%= color(0, 0, 0) %>;
  border: none;
  height: 1px;
  margin-bottom: 20px;
  margin-top: 20px;
}

/* field */

div.mi_field_label, div.mi_field_label_required {
  font-size: 0.75em;
  padding: 0.25em 1.25em 0.25em 1.25em;
}
div.mi_field_label_required {
  font-weight: bold;
}
input[type=text].mi_field, textarea.mi_field {
  background-color: <%= color(1, 1, 1) %>;
  border-bottom-color: <%= color(0.75, 0.75, 0.75) %>;
  border-left-color: <%= color(0.65, 0.65, 0.65) %>;
  border-right-color: <%= color(0.65, 0.65, 0.65) %>;
  border-style: solid;
  border-top-color: <%= color(0.55, 0.55, 0.55) %>;
  border-width: 1px;
  color: <%= color(0, 0, 0) %>;
  font-size: 1em;
  margin-bottom: 1em;
  margin-right: 1em;
  padding: 0.1em 0.75em 0.1em 0.75em;
  <%= border_radius(:amount => 0.25) %>
}
textarea.mi_field {
  min-height: 10em;
  width: 100%;
}

/* key */

kbd.mi {
  background-color: #e5e5e5;
}

/* label */

label.mi_label {
  display: inline-block;
}

/* link */

a.mi_link {
  color: #0066ff;
  text-decoration: none;
}
a.mi_link:visited {
  color: #993399;
}
a.mi_link:active {
  color: #3399ff;
  outline: 0;
  text-decoration: underline;
}
a.mi_link:focus {
  color: #3399ff;
  outline: 0;
}
a.mi_link:hover {
  text-decoration: underline;
}

/* logo */

div.mi_logo {
  background-image: url('/images/logo.png');
  background-repeat: no-repeat;
  height: 100px;
  margin-left: 60px;
  width: 150px;
}

/* menu */

select.mi {
  padding-left: 2px;
  padding-right: 2px;
}

/* message */

div.mi_message {
  border: solid 1px;
  border-color: #06f;
  background: #ccc;
  margin: 20px 0 20px 0;
  padding: 10px;
}
div.mi_message.error {
  background: #fcc;
  border-color: #c33;
}
div.mi_message.success {
  background: #cfc;
  border-color: #6f6;
}
div.mi_message.warning {
  background: #ff9;
  border-color: #fc0;
}

/* paragraph */

p.mi:first-child:first-letter {
  font-size: 1.5em;
}
p+p.mi {
  text-indent: 2em;
}

/* picture */

img.mi_picture {
	border-color: #000;
  border-style: solid;
  border-width: 2px;
}

/* quote */

blockquote.mi {
background-color: #e5e5e5;
}

/* tab */

.mi_tab, .mi_tab_selected {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-style: solid;
  border-width: 1px;
  font-size: 1em;
  height: 2em;
  opacity: 0.9;
  padding: 0 0.75em 0 0.75em;
}
.mi_tab {
  background: none;
  border-bottom-color: <%= color(0, 0, 0) %>;
  border-left-color: <%= color(0.15, 0.15, 0.15) %>;
  border-right-color: <%= color(0, 0, 0) %>;
  border-top-color: <%= color(0.1, 0.1, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_tab:hover {
  background-color: <%= color(0.15, 0.15, 0.15) %>;
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
}
.mi_tab:active, button.mi_tab_selected {
  background-color: <%= color(0, 0.3, 0.9) %>;
  border-bottom-color: <%= color(0, 0.2, 0.8) %>;
  border-left-color: <%= color(0, 0.25, 0.85) %>;
  border-right-color: <%= color(0, 0.2, 0.8) %>;
  border-top-color: <%= color(0, 0.3, 0.9) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_block .mi_tab:first-child, .mi_block .mi_tab_selected:first-child {
  <%= border_radius(:edge => 'left') %>
}
.mi_bar_top .mi_tab:first-child, .mi_bar_top .mi_tab_selected:first-child {
  <%= border_radius(:corner => 'top_left') %>
}

/* table */

table.mi_table {
  border-collapse: collapse;
  border-spacing: 0;
  border-style: none;
  border-width: 0;
}

/* tray */

div.mi_tray {
  background-color: <%= color(0.8, 0.8, 0.8) %>;
  border-bottom-color: <%= color(0.75, 0.75, 0.75) %>;
  border-left-color: <%= color(0.7, 0.7, 0.7) %>;
  border-right-color: <%= color(0.7, 0.7, 0.7) %>;
  border-style: solid;
  border-top-color: <%= color(0.65, 0.65, 0.65) %>;
  border-width: 1px;
  <%= border_radius %>
}
