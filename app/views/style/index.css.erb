<%= @gecko -%>
<%= @msie -%>
* {
  font-family: Helvetica, Arial, sans-serif;
  margin: 0;
}

/* background */

.mi_background {
  background-image: url('/images/body.png');
  background-repeat: repeat-x;
}

/* bar */

.mi_bar, .mi_bar_expanded, .mi_bar_bottom, .mi_bar_top {
  background-color: <%= color(0, 0, 0) %>;
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  color: <%= color(1, 1, 1) %>;
  height: 2em;
  line-height: 2em;
  white-space: nowrap;
}
.mi_bar {
  <%= border_radius %>
}
.mi_tray .mi_bar_bottom {
  background-color: <%= color(1, 1, 1) %>;
  border-top-color: <%= color(0.9, 0.9, 0.9) %>;
  border-top-style: solid;
  border-top-width: 1px;
  color: <%= color(0.2, 0.2, 0.2) %>;
  <%= border_radius(:edge => 'bottom') %>
}
.mi_tray .mi_bar_top {
  background-color: <%= color(1, 1, 1) %>;
  border-bottom-color: <%= color(0.7, 0.7, 0.7) %>;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  color: <%= color(0.2, 0.2, 0.2) %>;
  <%= border_radius(:edge => 'top') %>
}

/* button */

.mi_button {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-style: solid;
  border-width: 1px;
  font-size: 1em;
  margin-left: 1em;
  margin-top: 1em;
  padding-bottom: 0.25em;
  padding-left: 0.75em;
  padding-right: 0.75em;
  padding-top: 0.25em;
  <%= border_radius %>
}
.mi_button .mi_picture {
  border-bottom-color: <%= color(0.5, 0.5, 0.5) %>;
  border-left-color: <%= color(0.4, 0.4, 0.4) %>;
  border-right-color: <%= color(0.4, 0.4, 0.4) %>;
  border-top-color: <%= color(0.2, 0.2, 0.2) %>;
  margin: 0;
}
.mi_button .mi_button_text {
  padding-left: 0.75em;
  text-align: left;
  width: 100%;
}
button.mi_button {
  background-color: <%= color(0.3, 0.3, 0.3) %>;
  border-bottom-color: <%= color(0.1, 0.1, 0.1) %>;
  border-left-color: <%= color(0.2, 0.2, 0.2) %>;
  border-right-color: <%= color(0.2, 0.2, 0.2) %>;
  border-top-color: <%= color(0.3, 0.3, 0.3) %>;
  color: <%= color(1, 1, 1) %>;
}
button.mi_button:hover {
  background-color: <%= color(0.4, 0.4, 0.4) %>;
  border-bottom-color: <%= color(0.2, 0.2, 0.2) %>;
  border-left-color: <%= color(0.3, 0.3, 0.3) %>;
  border-right-color: <%= color(0.3, 0.3, 0.3) %>;
  border-top-color: <%= color(0.4, 0.4, 0.4) %>;
  color: <%= color(1, 1, 1) %>;
}
button.mi_button:active {
  background-color: <%= color(0.3, 0.3, 0.3) %>;
  background-image: none;
  border-bottom-color: <%= color(0.3, 0.3, 0.3) %>;
  border-left-color: <%= color(0.2, 0.2, 0.2) %>;
  border-right-color: <%= color(0.2, 0.2, 0.2) %>;
  border-top-color: <%= color(0.1, 0.1, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button {
  background-color: <%= color(0.1, 0.5, 0.1) %>;
  border-bottom-color: <%= color(0, 0.3, 0) %>;
  border-left-color: <%= color(0, 0.4, 0) %>;
  border-right-color: <%= color(0, 0.4, 0) %>;
  border-top-color: <%= color(0.1, 0.5, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button:hover {
  background-color: <%= color(0.2, 0.6, 0.2) %>;
  border-bottom-color: <%= color(0, 0.4, 0) %>;
  border-left-color: <%= color(0.1, 0.5, 0.1) %>;
  border-right-color: <%= color(0.1, 0.5, 0.1) %>;
  border-top-color: <%= color(0.2, 0.6, 0.2) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button:active {
  background-color: <%= color(0.1, 0.5, 0.1) %>;
  background-image: none;
  border-bottom-color: <%= color(0.1, 0.5, 0.1) %>;
  border-left-color: <%= color(0.1, 0.5, 0.1) %>;
  border-right-color: <%= color(0.1, 0.5, 0.1) %>;
  border-top-color: <%= color(0, 0.4, 0) %>;
  color: <%= color(1, 1, 1) %>;
}

/* checkbox */

input[type=checkbox].mi_checkbox {
  vertical-align: middle;
}

/* code */

code.mi {
  background-color: <%= color(0, 0, 0) %>;
  border-color: <%= color(0, 0, 0) %>;
  border-style: solid;
  border-width: 1px;
  color: <%= color(1, 1, 1) %>;
  display: block;
  font-family: 'Bitstream Vera Sans Mono', 'Monaco', monospace;
  font-size: small;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
  padding-top: 15px;
  margin-top: 5px;
}
code.mi var {
  color: <%= color(0.75, 0.75, 0.75) %>;
}

/* column */

.mi_column {
  vertical-align: top;
}

/* dialog */

div.dialog-foreground {
  -moz-border-radius: 6px;
  -moz-box-shadow: 0 2px 4px <%= color(0, 0, 0) %>;
  -webkit-border-radius: 6px;
  -webkit-box-shadow: 0 2px 4px <%= color(0, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
div.dialog-foreground div.dialog-middle {
  background-image: url('/images/transparent-black.png');
  max-height: 420px;
  max-width: 740px;
  overflow: auto;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground div.dialog-middle table.index {
  margin-top: 15px;
}
div.dialog-foreground div.dialog-middle table.index th {
  padding-bottom: 1px;
  padding-top: 1px;
}
div.dialog-foreground div.dialog-middle table.index th:first-child {
  color: <%= color(1, 1, 1) %>;
}
div.dialog-foreground div.dialog-middle td {
  padding-left: 30px;
  vertical-align: top;
}
div.dialog-foreground div.dialog-middle td:first-child {
  padding-left: 0;
}
div.dialog-foreground div.dialog-middle td.set {
  white-space: nowrap;
}
div.dialog-foreground div.dialog-top {
  -moz-border-radius-topleft: 6px;
  -moz-border-radius-topright: 6px;
  -webkit-border-top-left-radius: 6px;
  -webkit-border-top-right-radius: 6px;
  background-image: url('/images/transparent-gray.png');
  line-height: 30px;
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground p {
  margin-top: 15px;
  max-width: 320px;
}
div.dialog-foreground table.dialog-bottom {
  -moz-border-radius-bottomleft: 6px;
  -moz-border-radius-bottomright: 6px;
  -webkit-border-bottom-left-radius: 6px;
  -webkit-border-bottom-right-radius: 6px;
  background-image: url('/images/transparent-gray.png');
  height: 30px;
  width: 100%;
}
div.dialog-foreground table.dialog-bottom td {
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground table.dialog-bottom td:first-child {
  width: 100%;
}
table.dialog-background {
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

/* divider */

hr.mi_divider {
  background: <%= color(0, 0, 0) %>;
  border: none;
  height: 1px;
  margin-bottom: 20px;
  margin-top: 20px;
}

/* field */

div.mi_field_label, div.mi_field_label_required {
  font-size: 0.75em;
  padding: 0.25em 1.25em 0.25em 1.25em;
}
div.mi_field_label_required {
  font-weight: bold;
}
input[type=text].mi_field, textarea.mi_field {
  background-color: <%= color(1, 1, 1) %>;
  border-bottom-color: <%= color(0.75, 0.75, 0.75) %>;
  border-left-color: <%= color(0.65, 0.65, 0.65) %>;
  border-right-color: <%= color(0.65, 0.65, 0.65) %>;
  border-style: solid;
  border-top-color: <%= color(0.55, 0.55, 0.55) %>;
  border-width: 1px;
  color: <%= color(0, 0, 0) %>;
  font-size: 1em;
  padding: 0.1em 0.75em 0.1em 0.75em;
  <%= border_radius(:amount => 0.25) %>
}
textarea.mi_field {
  min-height: 10em;
  width: 100%;
}

/* key */

kbd.mi {
  background-color: #e5e5e5;
}

/* label */

label.mi_label {
  display: inline-block;
}

/* link */

a.mi_link {
  color: #0066ff;
  text-decoration: none;
}
a.mi_link:visited {
  color: #993399;
}
a.mi_link:active {
  color: #3399ff;
  outline: 0;
  text-decoration: underline;
}
a.mi_link:focus {
  color: #3399ff;
  outline: 0;
}
a.mi_link:hover {
  text-decoration: underline;
}

/* menu */

select.mi_menu {
  padding-left: 2px;
  padding-right: 2px;
}

/* merb */

div.mi_merb {
  background-image: url('/images/merb.png');
  border-style: solid;
  border-width: 0;
  float: right;
  height: 100px;
  margin-bottom: 1em;
  margin-left: 1em;
  width: 250px;
  <%= border_radius(:corner => 'top_right_bottom_left') %>
}

/* message */

div.mi_message {
  border: solid 1px;
  border-color: #06f;
  background: #ccc;
  margin: 20px 0 20px 0;
  padding: 10px;
}
div.mi_message.error {
  background: #fcc;
  border-color: #c33;
}
div.mi_message.success {
  background: #cfc;
  border-color: #6f6;
}
div.mi_message.warning {
  background: #ff9;
  border-color: #fc0;
}

/* paragraph */

p.mi_paragraph, p.mi_paragraph_first {
  margin-left: 1em;
  margin-right: 1em;
}
p.mi_paragraph {
  margin-top: 0.5em;
}
p.mi_paragraph_first {
  margin-top: 1em;
  <%= has_layout %>
}
p.mi_paragraph_first:first-letter {
  font-size: 1.5em;
  font-weight: bold;
}

/* picture */

.mi_picture {
  border-color: <%= color(0.5, 0.5, 0.5) %>;
  border-style: solid;
  border-width: 1px;
  margin-left: 1em;
  margin-top: 1em;
  vertical-align: middle;
}

/* quote */

blockquote.mi_quote {
  background-color: #e5e5e5;
}

/* tab */

.mi_tab, .mi_tab_selected {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-bottom-style: none;
  border-left-style: solid;
  border-left-width: 1px;
  border-right-style: solid;
  border-right-width: 1px;
  border-top-style: none;
  font-size: 1em;
  height: 2em;
  padding: 0 0.75em 0 0.75em;
}
.mi_tab {
  background-color: <%= color(0, 0, 0) %>;
  border-left-color: <%= color(0.1, 0.1, 0.1) %>;
  border-right-color: <%= color(0, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_tray .mi_tab {
  background-color: <%= color(1, 1, 1) %>;
  border-left-color: <%= color(1, 1, 1) %>;
  border-right-color: <%= color(0.9, 0.9, 0.9) %>;
  color: <%= color(0.2, 0.2, 0.2) %>;
}
.mi_tab:hover {
  background-color: <%= color(0.1, 0.1, 0.1) %>;
}
.mi_tray .mi_tab:hover {
  background-color: <%= color(0.9, 0.9, 0.9) %>;
}
.mi_tab:active, .mi_tab_selected, .mi_tray .mi_tab:active, .mi_tray .mi_tab_selected {
  background-color: <%= color(0, 0.3, 0.9) %>;
  border-left-color: <%= color(0, 0.25, 0.85) %>;
  border-right-color: <%= color(0, 0.2, 0.8) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_bar .mi_tab:first-child, .mi_bar .mi_tab_selected:first-child {
  <%= border_radius(:edge => 'left') %>
}
.mi_tray .mi_bar_top .mi_tab:first-child, .mi_tray .mi_bar_top .mi_tab_selected:first-child {
  <%= border_radius(:corner => 'top_left') %>
}

/* table */

table.mi_table {
  border-collapse: collapse;
  border-spacing: 0;
  border-style: none;
  border-width: 0;
}

/* title */

.mi_title {
  font-size: 2em;
  margin: 0.5em;
}
.mi_bar .mi_title, .mi_bar_bottom .mi_title, .mi_bar_top .mi_title {
  font-size: 1em;
  margin-left: 1em;
  margin-top: 0;
}

/* tray */

div.mi_tray {
  background-color: <%= color(0.95, 0.95, 0.95) %>;
  background-image: url('/images/bevel.png');
  background-position: top center;
  background-repeat: repeat-x;
  border-bottom-color: <%= color(0.85, 0.85, 0.85) %>;
  border-left-color: <%= color(0.75, 0.75, 0.75) %>;
  border-right-color: <%= color(0.75, 0.75, 0.75) %>;
  border-top-color: <%= color(0.6, 0.6, 0.6) %>;
  border-style: solid;
  border-width: 1px;
  padding-bottom: 1em;
  margin: 1em;
  <%= border_radius(:amount => 0.6) %>
}
