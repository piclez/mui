<%= @gecko -%>
<%= @msie -%>
* {
  font-family: "Lucida Grande", Verdana, sans-serif;
  line-height: 1em;
  margin: 0;
  padding: 0;
}
body {
  font-size: 13px;
}

/* bar */

.mi_bar, .mi_bar_expanded {
  background-color: <%= color(0, 0, 0) %>;
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  color: <%= color(1, 1, 1) %>;
  white-space: nowrap;
}
.mi_bar {
  <%= border_radius %>
}
.mi_bar_title {
  line-height: 2em;
  min-height: 2em;
  margin-left: 2em;
}
.mi_tray .mi_bar {
  background-color: <%= color(1, 1, 1) %>;
  border-bottom-color: <%= color(0.7, 0.7, 0.7) %>;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  color: <%= color(0.2, 0.2, 0.2) %>;
  <%= border_radius(:edge => 'top') %>
}

/* button */

.mi_button, input[type=submit].mi_button {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-style: solid;
  border-width: 1px;
  display: block;
  font-size: 0.8em;
  line-height: 2em;
  min-height: 2em;
  margin-left: 2.5em;
  margin-top: 1.25em;
  padding-left: 1em;
  padding-right: 1em;
  <%= border_radius %>
}
button.mi_button {
  padding-bottom: 1em;
  padding-top: 1em;
}
.mi_button .mi_photo {
  border-bottom-color: <%= color(0.5, 0.5, 0.5) %>;
  border-left-color: <%= color(0.4, 0.4, 0.4) %>;
  border-right-color: <%= color(0.4, 0.4, 0.4) %>;
  border-top-color: <%= color(0.2, 0.2, 0.2) %>;
  margin-left: 0;
  margin-top: 0;
}
.mi_button_text {
  padding-left: 1em;
  text-align: left;
  width: 100%;
}
.mi_bar .mi_button, .mi_bar_expanded .mi_button {
  margin-top: 0;
}
.mi_button {
  background-color: <%= color(0.3, 0.3, 0.3) %>;
  border-bottom-color: <%= color(0.1, 0.1, 0.1) %>;
  border-left-color: <%= color(0.2, 0.2, 0.2) %>;
  border-right-color: <%= color(0.2, 0.2, 0.2) %>;
  border-top-color: <%= color(0.3, 0.3, 0.3) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_button:hover {
  background-color: <%= color(0.4, 0.4, 0.4) %>;
  border-bottom-color: <%= color(0.2, 0.2, 0.2) %>;
  border-left-color: <%= color(0.3, 0.3, 0.3) %>;
  border-right-color: <%= color(0.3, 0.3, 0.3) %>;
  border-top-color: <%= color(0.4, 0.4, 0.4) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_button:active {
  background-color: <%= color(0.3, 0.3, 0.3) %>;
  background-image: none;
  border-bottom-color: <%= color(0.3, 0.3, 0.3) %>;
  border-left-color: <%= color(0.2, 0.2, 0.2) %>;
  border-right-color: <%= color(0.2, 0.2, 0.2) %>;
  border-top-color: <%= color(0.1, 0.1, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button {
  background-color: <%= color(0.1, 0.5, 0.1) %>;
  border-bottom-color: <%= color(0, 0.3, 0) %>;
  border-left-color: <%= color(0, 0.4, 0) %>;
  border-right-color: <%= color(0, 0.4, 0) %>;
  border-top-color: <%= color(0.1, 0.5, 0.1) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button:hover {
  background-color: <%= color(0.2, 0.6, 0.2) %>;
  border-bottom-color: <%= color(0, 0.4, 0) %>;
  border-left-color: <%= color(0.1, 0.5, 0.1) %>;
  border-right-color: <%= color(0.1, 0.5, 0.1) %>;
  border-top-color: <%= color(0.2, 0.6, 0.2) %>;
  color: <%= color(1, 1, 1) %>;
}
input[type=submit].mi_button:active {
  background-color: <%= color(0.1, 0.5, 0.1) %>;
  background-image: none;
  border-bottom-color: <%= color(0.1, 0.5, 0.1) %>;
  border-left-color: <%= color(0.1, 0.5, 0.1) %>;
  border-right-color: <%= color(0.1, 0.5, 0.1) %>;
  border-top-color: <%= color(0, 0.4, 0) %>;
  color: <%= color(1, 1, 1) %>;
}

/* checkbox */

input[type=checkbox].mi_checkbox {
  vertical-align: middle;
}

/* code */

code.mi {
  background-color: <%= color(0, 0, 0) %>;
  border-color: <%= color(0, 0, 0) %>;
  border-style: solid;
  border-width: 1px;
  color: <%= color(1, 1, 1) %>;
  display: block;
  font-family: 'Bitstream Vera Sans Mono', 'Monaco', monospace;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
  padding-top: 15px;
  margin-top: 5px;
}
code.mi var {
  color: <%= color(0.75, 0.75, 0.75) %>;
}

/* column */

.mi_column, .mi_column_right {
  vertical-align: top;
}
.mi_column_right {
  padding-right: 2em;
  text-align: right;
  width: 100%;
}

/* dialog */

div.dialog-foreground {
  -moz-border-radius: 6px;
  -moz-box-shadow: 0 2px 4px <%= color(0, 0, 0) %>;
  -webkit-border-radius: 6px;
  -webkit-box-shadow: 0 2px 4px <%= color(0, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
div.dialog-foreground div.dialog-middle {
  background-image: url('/images/transparent-black.png');
  max-height: 420px;
  max-width: 740px;
  overflow: auto;
  padding-bottom: 15px;
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground div.dialog-middle table.index {
  margin-top: 15px;
}
div.dialog-foreground div.dialog-middle table.index th {
  padding-bottom: 1px;
  padding-top: 1px;
}
div.dialog-foreground div.dialog-middle table.index th:first-child {
  color: <%= color(1, 1, 1) %>;
}
div.dialog-foreground div.dialog-middle td {
  padding-left: 30px;
  vertical-align: top;
}
div.dialog-foreground div.dialog-middle td:first-child {
  padding-left: 0;
}
div.dialog-foreground div.dialog-middle td.set {
  white-space: nowrap;
}
div.dialog-foreground div.dialog-top {
  -moz-border-radius-topleft: 6px;
  -moz-border-radius-topright: 6px;
  -webkit-border-top-left-radius: 6px;
  -webkit-border-top-right-radius: 6px;
  background-image: url('/images/transparent-gray.png');
  line-height: 30px;
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground p {
  margin-top: 15px;
  max-width: 320px;
}
div.dialog-foreground table.dialog-bottom {
  -moz-border-radius-bottomleft: 6px;
  -moz-border-radius-bottomright: 6px;
  -webkit-border-bottom-left-radius: 6px;
  -webkit-border-bottom-right-radius: 6px;
  background-image: url('/images/transparent-gray.png');
  height: 30px;
  width: 100%;
}
div.dialog-foreground table.dialog-bottom td {
  padding-left: 30px;
  padding-right: 30px;
}
div.dialog-foreground table.dialog-bottom td:first-child {
  width: 100%;
}
table.dialog-background {
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

/* divider */

hr.mi_divider {
  background: <%= color(0, 0, 0) %>;
  border: none;
  height: 1px;
  margin-bottom: 20px;
  margin-top: 20px;
}

/* field */

.mi_field {
  display: block;
  margin-left: 2em;
  margin-top: 1em;
}
.mi_field_label, .mi_field_label_optional {
  font-size: 0.8em;
}
.mi_field_label {
  font-weight: bold;
}
.mi_field_password, .mi_field_text, .mi_field_textarea {
  background-color: <%= color(1, 1, 1) %>;
  border-bottom-color: <%= color(0.75, 0.75, 0.75) %>;
  border-left-color: <%= color(0.65, 0.65, 0.65) %>;
  border-right-color: <%= color(0.65, 0.65, 0.65) %>;
  border-style: solid;
  border-top-color: <%= color(0.55, 0.55, 0.55) %>;
  border-width: 1px;
  color: <%= color(0, 0, 0) %>;
  display: block;
  font-size: 1em;
  line-height: 1.6em;
  min-height: 1.6em;
  margin-top: 0.25em;
  padding-left: 0.25em;
  padding-right: 0.25em;
  <%= border_radius %>
  <%= border_radius(:amount => 0.4) %>
}
.mi_field_textarea {
  min-height: 10em;
  width: 100%;
}

/* form */

.mi_form {
  display: inline;
}

/* image */

.mi_image, .mi_image_border_radius, .mi_image_margin, .mi_image_margin_border_radius {
  background-repeat: no-repeat;
  display: block;
}
.mi_image_margin, .mi_image_margin_border_radius {
  margin: 1em;
}
.mi_image_border_radius, .mi_image_margin_border_radius {
  <%= border_radius %>
}

/* inline */

.mi_inline {
  display: inline-block ! important;
}


/* key */

kbd.mi {
  background-color: #e5e5e5;
}

/* link */

.mi_link {
  color: #0066ff;
  display: inline-block;
  margin-left: 2em;
  margin-top: 1em;
  text-decoration: none;
}
.mi_link:visited {
  color: #993399;
}
.mi_link:active {
  color: #3399ff;
  outline: 0;
  text-decoration: underline;
}
.mi_link:focus {
  color: #3399ff;
  outline: 0;
}
.mi_link:hover {
  text-decoration: underline;
}
.mi_paragraph .mi_link {
  display: inline;
  margin: 0;
}

/* menu */

select.mi_menu {
  padding-left: 2px;
  padding-right: 2px;
}

/* message */

.mi_message {
  border: solid 1px;
  border-color: #06f;
  background: #ccc;
  margin: 20px 0 20px 0;
  padding: 10px;
}
.mi_message.error {
  background: #fcc;
  border-color: #c33;
}
.mi_message.success {
  background: #cfc;
  border-color: #6f6;
}
.mi_message.warning {
  background: #ff9;
  border-color: #fc0;
}

/* paragraph */

.mi_paragraph {
  color: <%= color(0.2, 0.2, 0.2) %>;
  display: block;
  line-height: 1.5em;
  margin-left: 2em;
  margin-right: 2em;
  margin-top: 1em;
  max-width: 40em;
  min-width: 10em;
}
.mi_tray .mi_paragraph {
  margin-left: 1em;
  margin-right: 1em;
}

/* photo */

.mi_photo {
  border-color: <%= color(0.5, 0.5, 0.5) %>;
  border-style: solid;
  border-width: 1px;
  display: block;
  margin-left: 2em;
  margin-top: 1em;
  vertical-align: middle;
}

/* quote */

blockquote.mi_quote {
  background-color: #e5e5e5;
}

/* tab */

.mi_tab, input[type=submit].mi_tab {
  background-image: url('/images/reflection.png');
  background-position: center center;
  background-repeat: repeat-x;
  border-bottom: none;
  border-left-style: solid;
  border-left-width: 1px;
  border-right-style: solid;
  border-right-width: 1px;
  border-top: none;
  font-size: 1em;
  line-height: 2em;
  min-height: 2em;
  padding-left: 2em;
  padding-right: 2em;
}
.mi_tab {
  background-color: <%= color(0, 0, 0) %>;
  border-left-color: <%= color(0.1, 0.1, 0.1) %>;
  border-right-color: <%= color(0, 0, 0) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_tab:hover {
  background-color: <%= color(0.1, 0.1, 0.1) %>;
}
.mi_tray .mi_tab {
  background-color: <%= color(1, 1, 1) %>;
  border-left-color: <%= color(0.9, 0.9, 0.9) %>;
  border-right-color: <%= color(0.7, 0.7, 0.7) %>;
  color: <%= color(0.2, 0.2, 0.2) %>;
}
.mi_tray .mi_tab:hover {
  background-color: <%= color(0.9, 0.9, 0.9) %>;
}
.mi_tab:active, input[type=submit].mi_tab, .mi_tray .mi_tab:active, .mi_tray input[type=submit].mi_tab {
  background-color: <%= color(0, 0.3, 0.9) %>;
  border-left-color: <%= color(0, 0.25, 0.85) %>;
  border-right-color: <%= color(0, 0.2, 0.8) %>;
  color: <%= color(1, 1, 1) %>;
}
.mi_bar .mi_tab:first-child, .mi_bar input[type=submit].mi_tab:first-child {
  <%= border_radius(:edge => 'left') %>
}
.mi_tray .mi_tab:first-child, .mi_tray input[type=submit].mi_tab:first-child {
  <%= border_radius(:corner => 'top_left') %>
}

/* row */

.mi_row {
  border-collapse: collapse;
  border-spacing: 0;
  border-style: none;
  border-width: 0;
}

/* title */

.mi_title {
  display: block;
}
h1.mi_title {
  font-family: Helvetica, Verdana, sans-serif;
  font-size: 2.8em;
  letter-spacing: -0.05em;
  margin-left: 0.675em;
  margin-top: 0.675em;
}
h2.mi_title {
  font-size: 2.4em;
}
h3.mi_title {
  font-size: 2em;
}
h4.mi_title {
  font-size: 1.6em;
}
h5.mi_title {
font-size: 1.2em;
}
h6.mi_title {
font-size: 0.8em;
}

/* tray */

div.mi_tray {
  background-color: <%= color(0.95, 0.95, 0.95) %>;
  border-bottom-color: <%= color(0.95, 0.95, 0.95) %>;
  border-left-color: <%= color(0.85, 0.85, 0.85) %>;
  border-right-color: <%= color(0.85, 0.85, 0.85) %>;
  border-top-color: <%= color(0.75, 0.75, 0.75) %>;
  border-style: solid;
  border-width: 1px;
  display: block;
  margin-left: 2em;
  margin-right: 2em;
  margin-top: 2em;
  padding-bottom: 1em;
  <%= border_radius(:amount => 0.6) %>
}
